/**
 * Gallery Specific Styles - Premium Glass Overhaul
 * Scope: Content area of index.php (Grid View)
 */

/* Toolbar (Select Mode Bar) */
.gallery-toolbar {
    display: none; /* Hidden by default */
    align-items: center;
    justify-content: space-between;

    /* Glassmorphism */
    background: var(--panel-bg);
    backdrop-filter: blur(var(--panel-blur));
    -webkit-backdrop-filter: blur(var(--panel-blur));
    border-bottom: 1px solid var(--panel-border);

    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 90;
    margin: -1rem -1rem 2rem -1rem;
    border-radius: 0 0 20px 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.gallery-toolbar.active {
    display: flex;
    animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
    from { transform: translateY(-100%); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.gallery-toolbar .actions {
    display: flex;
    gap: 1rem;
}

/* Card Container & Layout */
.gallery-card {
    position: relative;
    display: block;

    /* Premium Card Base */
    background: var(--panel-bg);
    border: 1px solid var(--panel-border);
    border-radius: var(--radius-card); /* 24px */
    overflow: hidden;

    text-decoration: none;
    color: inherit;
    transition: var(--transition-slow);
    cursor: pointer;
}

/* Hover Animation */
.gallery-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: var(--glow-box);
    border-color: rgba(255, 184, 77, 0.3); /* Amber border hint */
    z-index: 2;
}

/* Image Wrapper */
.card-image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 75%; /* 4:3 Aspect Ratio */
    background: rgba(0, 0, 0, 0.2);
    overflow: hidden;
    /* Radius handled by parent, but ensure content clips */
}

.card-image-wrapper img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.gallery-card:hover img {
    transform: scale(1.1);
}

/* Hover Overlay */
.card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1.5rem 1.5rem;
    background: linear-gradient(to top, rgba(15, 12, 21, 0.95) 0%, rgba(15, 12, 21, 0.6) 60%, transparent 100%);
    opacity: 0;
    transform: translateY(20px);
    transition: var(--transition-slow);
    pointer-events: none;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.gallery-card:hover .card-overlay {
    opacity: 1;
    transform: translateY(0);
}

/* Typography */
.card-title {
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0 0 0.25rem;
    color: var(--text-main);
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-subtitle {
    font-size: 0.9rem;
    color: var(--accent); /* Amber text for user */
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.card-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.8rem;
    color: var(--text-muted);
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
}

.meta-item span.material-icons {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.5);
}

/* Selection Logic */
.card-select-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(15, 12, 21, 0.4); /* Darker dim */
    backdrop-filter: blur(2px);
    display: none;
    z-index: 5;
    transition: var(--transition-slow);
}

.gallery-card.selected .card-select-overlay {
    /* Show when selected to dim image slightly */
    display: block;
}

/* Checkbox Indicator */
.select-indicator {
    position: absolute;
    top: 15px;
    right: 15px;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.6);
    background: rgba(0, 0, 0, 0.4);
    display: flex; /* Always potentially visible in layout, toggled by CSS class usually */
    align-items: center;
    justify-content: center;
    transition: var(--transition-slow);
    z-index: 10;
    opacity: 0; /* Hidden by default until hover or select mode */
    transform: scale(0.8);
}

/* Show indicator on hover or if select mode is on */
.gallery-card:hover .select-indicator,
.select-mode .select-indicator,
.gallery-card.selected .select-indicator {
    opacity: 1;
    transform: scale(1);
}

.gallery-card.selected .select-indicator {
    background: var(--accent);
    border-color: var(--accent);
    box-shadow: 0 0 15px var(--accent-glow);
    color: #1a0b1c; /* Dark checkmark */
}

.select-indicator::after {
    content: "âœ“";
    font-size: 16px;
    font-weight: 800;
    opacity: 0;
    transform: scale(0.5);
    transition: var(--transition-slow);
}

.gallery-card.selected .select-indicator::after {
    opacity: 1;
    transform: scale(1);
}

/* Selected Card State */
.gallery-card.selected {
    border-color: var(--accent);
    box-shadow: 0 0 0 1px var(--accent), 0 10px 40px rgba(0,0,0,0.5);
    transform: scale(0.96);
}

/* Badges */
.card-badges {
    position: absolute;
    top: 15px;
    left: 15px;
    display: flex;
    gap: 8px;
    z-index: 3;
}

.card-badge {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    padding: 0.4rem 0.8rem;
    border-radius: 999px; /* Pill */
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-main);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    gap: 6px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.card-badge.public {
    background: rgba(255, 184, 77, 0.2);
    border-color: rgba(255, 184, 77, 0.4);
    color: var(--accent);
}

/* Modal (Bulk Share) */
.bulk-share-results {
    /* Glass Modal */
    background: rgba(25, 20, 30, 0.95);
    backdrop-filter: blur(30px);
    border: 1px solid var(--panel-border);
    box-shadow: 0 25px 80px rgba(0,0,0,0.7);
    border-radius: 24px;
    color: var(--text-main);
}

.bulk-share-header {
    border-bottom: 1px solid var(--panel-border);
    padding: 2rem;
}

.bulk-share-header h3 {
    margin: 0;
    font-size: 1.5rem;
    color: var(--accent);
}

.share-link-row {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1rem;
    border: 1px solid var(--panel-border);
}

.share-link-input {
    color: var(--text-main);
    font-family: 'Monaco', 'Consolas', monospace;
}

.modal-backdrop {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
}
